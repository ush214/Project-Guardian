rules_version = '2';
// Approved read/admin write on tasks; public read for WERP assessments @ 2025-09-19
service cloud.firestore {
  match /databases/{database}/documents {

    function isApproved() {
      return request.auth != null && request.auth.token.approved == true;
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Allow a user to view their own approval status
    match /system/approvals/users/{uid} {
      allow get: if request.auth != null && request.auth.uid == uid;
      allow list, create, update, delete: if false;
    }

    // Public WERP assessments (both guardian and guardian-agent-default are covered by {appId})
    match /artifacts/{appId}/public/data/werpassessments/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Task manager (approved can read, admin can write)
    match /artifacts/{appId}/private/admin/tasks/{taskId} {
      allow get, list: if isApproved();
      allow create, update, delete: if isAdmin();
    }
  }
}