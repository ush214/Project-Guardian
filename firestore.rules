rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isSelf(userId) { return isSignedIn() && request.auth.uid == userId; }

    // Artifacts namespace
    match /artifacts/{appId} {
      // Public data: readable by signed-in users (change to 'true' if you want fully public)
      match /public/{document=**} {
        allow read: if isSignedIn();
        // Writes to public data should go through trusted backends (Cloud Functions) or admins only.
        allow write: if false;
      }

      // Private space
      match /private {
        // Each user can read/create their own profile/role doc.
        match /users/{userId} {
          allow read: if isSelf(userId);
          allow create: if isSelf(userId);
          // Role elevation/changes must be done by an admin backend, not by clients.
          allow update, delete: if false;
        }

        // Everything else private: deny by default
        match /{document=**} {
          allow read, write: if false;
        }
      }
    }
  }
}