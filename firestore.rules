rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedInNonAnonymous() {
      return request.auth != null
        && request.auth.token.firebase != null
        && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    match /allowlist/{uid} {
      // Users can read their own allowlist entry for transparency; writes are admin-only (via console or backend).
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    match /artifacts/{appId}/public/data/werpassessments/{docId} {
      allow read, write: if isSignedInNonAnonymous()
        && exists(/databases/$(database)/documents/allowlist/$(request.auth.uid));
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}