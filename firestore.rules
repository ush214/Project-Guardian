rules_version = '2';
// Approved users can read and write tasks (create/update); only admins can delete.
// Public read for WERP assessments. Tasks_meta sequence is writable by approved users.
service cloud.firestore {
  match /databases/{database}/documents {

    function isApproved() {
      return request.auth != null && request.auth.token.approved == true;
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Users can view their own approval doc
    match /system/approvals/users/{uid} {
      allow get: if request.auth != null && request.auth.uid == uid;
      allow list, create, update, delete: if false;
    }

    // Public WERP assessments (guardian, guardian-agent-default)
    match /artifacts/{appId}/public/data/werpassessments/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Task manager data
    match /artifacts/{appId}/private/admin/tasks/{taskId} {
      allow get, list: if isApproved();
      allow create, update: if isApproved();
      allow delete: if isAdmin();
    }

    // Task sequence/meta for ID allocation
    match /artifacts/{appId}/private/admin/tasks_meta/{docId} {
      allow read: if isApproved();
      allow create, update: if isApproved();
      allow delete: if isAdmin();
    }
  }
}